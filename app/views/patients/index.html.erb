<h1>Patients</h1>
<div>
	<%= link_to "Generate Feed List", new_feed_list_path, class: "btn btn-lg btn-primary"%>
</div>

<br>
<% provide(:title, 'All patients') %>


<div style="position: relative">
<table border="1" style="width:100%" id="t01">
  <tr>
    <th>Id</th>
    <th>Name</th>
	<th>Owner</th>
  </tr>
 
<% @patients.each do |patient| %>
  <tr>
    <td><%= patient.id %>.</td>
    <td><%= link_to "#{patient.name}", patient%>
    	<%= patient.owner.last_name %></td>
    <td><%= link_to "#{patient.owner.first_name} #{patient.owner.last_name}", patient.owner %></td> 
  </tr> 
<% end %>

</table>
</div>
<%= will_paginate %>