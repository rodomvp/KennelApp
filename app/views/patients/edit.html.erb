<%= form_for(@patient) do |f| %>

<% provide(:title, "EDIT PATIENT: #{@patient.name} the #{@patient.breed}")  %>

<!-- Header -->
<h1>Edit Patient Profile<h1>

<h2><center>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control', style: 'width: 210px' %>
</center>
</h2>

<!-- Patient Profile Information -->
  <!-- Patient Picture -->
  <table border="0" class="patient-container" style="width: 100%;">
    <td>
        <%= image_tag @patient.image_url(:thumb).to_s,
            :style=>" float: left; margin: 20px;" %> 
            <%= f.file_field :image %>
    </td>
    <td style="width: 75%"> 
    <%= f.submit "Save changes", class: "btn btn-primary", style: "float: right; height: 40px; widht: 80px; margin-right: 100px; margin: 10px;" %>
    <%= f.label :weight %>
    <%= f.text_field :weight, class: 'form-control', style: 'width: 60px' %>
    <%= f.label :diet %>
    <%= f.text_field :diet, class: 'form-control', style: 'width: 200px' %>
    <%= f.label :breed %>
    <%= f.text_field :breed, class: 'form-control', style: 'width: 200px' %>
    <!-- NPO checkbox -->
    <%= f.label :npo, "NPO" %>
    <%= f.check_box :npo, class: 'form-control' %>
    
    </td>
  </table>
  <!-- Stay -->
  <% if @patient.stays.length > 0 %>
  <!-- Run Link -->
  <h5 style="margin-top:20px;"> Stay : <span class="label label-pill label-info" style="position: relative; background: #4682b4; left: 8px;"><%= link_to "#{@patient.current_stay.runn.ident}", @patient.current_stay.runn, :style=>"color: #eee; font-size: 9pt;" %></span></h5>
  <h6 style="margin-top: 12px;">
    Check in Time : 
    <% t = @patient.current_stay.created_at %>
    <%= t.in_time_zone('Central Time (US & Canada)').strftime("%B %d, %Y at %l:%M %p") %>
  </h6>
  <% end %>
</div>

