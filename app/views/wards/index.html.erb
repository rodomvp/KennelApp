<p id="notice"><%= notice %></p>

<h1>Listing Wards</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Ident</th>
      <th>Number of Runs</th>
      <th>List of Runns (ids)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wards.each do |ward| %>
      <tr>
        <td><%= ward.id %></td>
        <td><%= ward.ident %></td>
        <td><%= ward.runns.count %></td>
        <td><%= ward.runns.ids %></td>
        <td><%= link_to 'Show', ward %></td>
        <td><%= link_to 'Edit', edit_ward_path(ward) %></td>
        <td><%= link_to 'Destroy', ward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

