<h1>Owners</h1>

<%= form_tag '/owners', :method => 'get' do %>
  <%= render 'shared/search_an_index' %>
<% end %>
<br>
<!-- Add Owner button -->
<div>
	<%= link_to "Add Owner", new_owner_path, class: "btn btn-lg btn-primary"%>
</div>
 <br>

<div style="position: relative">
<table border="1" style="width:100%" id="t01">
<% @owners.each do |owner| %>
  <div class=thumblist>
  <ul>
    <li style="list-style-type:none" class=thumblist>
      <h3><%= link_to "#{owner.first_name} #{owner.last_name}", owner%></h3>
      <ul class="owner_patients">
      <% owner.patients.each do |p| %>
        <li>
          <%= link_to image_tag(p.image_url(:index_thumb).to_s, height: '32'), p %>
        </li>
      <% end %>
      </ul>
      <% if is_admin? %>
      <p style="float: right"><%= link_to "Delete", owner, method: :delete,
                                  data: { confirm: "You sure?" } %></p>
                                  <% end %>
    </li>
  </ul>
</div>
<% end %>
<%= will_paginate %>
